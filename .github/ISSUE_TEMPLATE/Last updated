name: Update Markdown Timestamp

on:
  push:
    paths:
      - '**.md'

jobs:
  update-timestamp:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Update timestamp in markdown files
        run: |
          FILES=$(git diff --name-only HEAD^ HEAD | grep '\.md$')
          for file in $FILES; do
            DATE=$(date +"%Yë…„ %mì›” %dì¼")
            sed -i "s/^ğŸ”— ì´ ë¬¸ì„œëŠ” .* ê¸°ì¤€ìœ¼ë¡œ ë§ˆì§€ë§‰ ìˆ˜ì •ë˜ì—ˆìŠµë‹ˆë‹¤.$/ğŸ”— ì´ ë¬¸ì„œëŠ” $DATE ê¸°ì¤€ìœ¼ë¡œ ë§ˆì§€ë§‰ ìˆ˜ì •ë˜ì—ˆìŠµë‹ˆë‹¤./" "$file"
          done

      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add .
          git commit -m "ìë™ ê°±ì‹ : ë¬¸ì„œ ìˆ˜ì •ì¼ ì—…ë°ì´íŠ¸" || echo "No changes"
          git push
